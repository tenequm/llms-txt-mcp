{
  "mcpServers": {
    "gitmcp": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://gitmcp.io/docs"]
    },
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "llms-txt-mcp": {
      "command": "uv",
      "args": [
        "run",
        "llms-txt-mcp",
        "--store-path", "tmp/mcp-data",
        "https://gofastmcp.com/llms.txt",
        "https://modelcontextprotocol.io/llms.txt"
      ]
    }
  }
}
